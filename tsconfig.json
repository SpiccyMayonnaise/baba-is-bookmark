{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noEmit": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es5",
    "jsx": "react",
    "lib": [
      "DOM",
      "es6"
    ],
    "baseUrl": "src",
    "rootDir": "src",
    "paths": {
      "@components/*": [
        "app/components/*"
      ],
      "@routes/*": [
        "app/components/routes/*"
      ],
      "@assets/*": [
        "app/assets/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "./src/common/typings"
    ]
  },
  "include": [
    "src/",
  ],
  "compileOnSave": false
}